<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/opaque_grey">




        <TextView
            android:id="@+id/text_view_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@+id/button_delete"
            android:gravity="start"
            android:padding="5dp"
            android:text="Name"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_view_address_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_address_name"

            android:padding="5dp"
            android:text="Unit"
            android:textSize="22sp"
            android:textStyle="bold"/>





        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Delete"
            android:id="@+id/button_delete"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_baseline_clear_24"
            android:background="@color/olive"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/button_delete"
            android:text="Delete"
            android:id="@+id/button_edit"
            android:layout_below="@id/button_delete"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"

            android:src="@drawable/ic_baseline_edit_24"
            android:background="@color/olive"/>





    </RelativeLayout>

</androidx.cardview.widget.CardView>